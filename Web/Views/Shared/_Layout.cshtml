@using System.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="jumbotron">
        <div class="container text-center">
            <h1>@ViewBag.Title</h1>
            <p>@ViewBag.Message</p>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")" style="padding:0px;">
                    <img src="~/Content/Images/logo.png" class="img-circle" style="display: inline-block;height: inherit; width: inherit; padding: 4px;"/>
                    <span style="display: inline-block;height: inherit; width: inherit; padding: 0px;">@ConfigurationManager.AppSettings["+DisplayName"]</span>
                </a>    
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="glyphicon glyphicon-home"></span>&nbsp;Home
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Contact Me", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Resume", "Resume", "Home")</li>
                        </ul>
                    </li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="glyphicon glyphicon-wrench"></span>&nbsp;Admin
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Home","Index",routeValues: new { area = "Admin", controller = "Home", action = "Index" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="pull-right">
            <span class="small">Page Loaded in @Html.Raw(Globals.RequestTimer.ElapsedMilliseconds + "ms")</span>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - @ConfigurationManager.AppSettings["+CopyrightMessage"]</p>
        </footer>
    </div>
</body>
</html>
