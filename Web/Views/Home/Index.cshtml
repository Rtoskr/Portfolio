@{
    ViewBag.Title = "Home Page";
}

<div id="indexCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#indexCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#indexCarousel" data-slide-to="1"></li>
        <li data-target="#indexCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/windows.jpeg">
            <div class="carousel-caption">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Microsoft Certified Professional</h4>
                    </div>
                    <div class="panel-body">

                    </div>
                </div>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/office_space.jpeg">
            <div class="carousel-caption">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Diverse Skillset</h4>
                    </div>
                    <div class="panel-body">

                    </div>
                </div>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/datacenter.jpeg">
            <div class="carousel-caption">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Strong Database Background</h4>
                    </div>
                    <div class="panel-body">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#indexCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#indexCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>